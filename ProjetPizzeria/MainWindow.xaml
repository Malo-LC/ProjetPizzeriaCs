<Window x:Class="ProjetPizzeria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetPizzeria"
        mc:Ignorable="d"
        Title="Pizzeria" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Ajouter_un_client" Content="Ajouter un client" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" Click="Ajouter_un_client_Click"/>
        <Label Content="Commander une pizza" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Background="#FFBDA4A4" Grid.Column="1" BorderBrush="#FF0A0A0A"/>


    </Grid>

</Window>
